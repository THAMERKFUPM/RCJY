@model UserManagement02.ViewModels.AssignSupervisorToDepartmentViewModel

@{
    ViewData["Title"] = "Assign Supervisor and Department";
}

<h2>Assign Supervisor and Department for @Model.FullName</h2>

<form asp-action="Assign" method="post">
    <input type="hidden" asp-for="TraineeId" />

    <div class="form-group">
        <label asp-for="SelectedDepartmentId" class="control-label"></label>
        <select asp-for="SelectedDepartmentId" asp-items="Model.Departments" class="form-control">
            <option value="">-- Select Department --</option>
        </select>
        <span asp-validation-for="SelectedDepartmentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SelectedSupervisorId" class="control-label"></label>
        <select asp-for="SelectedSupervisorId" asp-items="Model.Supervisors" class="form-control">
            <option value="">-- Select Supervisor --</option>
        </select>
        <span asp-validation-for="SelectedSupervisorId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Assign</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}